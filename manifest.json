{
  "manifest_version": 2,

  "name": "Google Voice Bulk Texter",
  "description": "This extension enables bulk SMS via Google Voice from within the Google Inbox or Hangouts web apps.",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Bulk SMS",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["https://hangouts.google.com/webchat/*"],
      "js": ["contentScript.js" ],
      "all_frames": true
    }
  ],
  "permissions": [
    "tabs",
    "clipboardWrite",
    "clipboardRead"
  ]
}
