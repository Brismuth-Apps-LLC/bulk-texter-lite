{
  "manifest_version": 2,

  "name": "Google Voice Bulk Texter",

  "description": "Send customized bulk SMS messages via Google Voice from Google Inbox or Hangouts. This tool is open source.",

  "version": "0.1.1",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Bulk SMS",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://hangouts.google.com/webchat/*"],
      "js": ["contentScript.js" ],
      "all_frames": true
    }
  ],

  "permissions": [
    "clipboardWrite",
    "clipboardRead"
  ]
}
