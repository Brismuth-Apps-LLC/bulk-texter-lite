{
  "manifest_version": 2,

  "name": "Bulk Texter Lite",

  "short_name": "Bulk Texter",

  "description": "Send personalized bulk SMS messages via Google Voice. This software is not affiliated with Google or Google Voice.",

  "version": "2.0.8",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Bulk SMS",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://voice.google.com/*"],
      "js": [
        "contentScripts/googleVoiceManager.js",
        "contentScripts/tools.js",
        "contentScripts/main.js"
      ],
      "all_frames": true
    }
  ],

  "icons": { "48": "icon48.png",
             "128": "icon.png" },

  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "storage"
  ]
}
